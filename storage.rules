rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Imagens de PMEs (fachada)
    // Somente a PME dona pode escrever — qualquer um pode ler
    match /pmes/{pmeId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.auth.uid == pmeId &&
                   request.auth.token.role == 'pme' &&
                   request.resource.contentType.matches('image/webp') &&
                   request.resource.size < 2 * 1024 * 1024; // max 2MB
    }

    // Imagens de ofertas
    // Somente PME autenticada pode escrever — qualquer um pode ler
    match /ofertas/{pmeId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.auth.uid == pmeId &&
                   request.auth.token.role == 'pme' &&
                   request.resource.contentType.matches('image/webp') &&
                   request.resource.size < 2 * 1024 * 1024;
    }
  }
}
